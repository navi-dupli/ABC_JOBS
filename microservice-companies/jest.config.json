{
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "statements": 70
    }
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/coverage/",
    ".entity.ts",
    "main.ts",
    ".module.ts"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/coverage/",
    ".entity.ts",
    "main.ts",
    ".module.ts"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}